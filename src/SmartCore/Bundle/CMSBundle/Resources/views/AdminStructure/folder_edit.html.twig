{% extends '@CMS/AdminStructure/structure.html.twig' %}

{% block title %}{{ 'Edit folder'|trans }} / {{ parent() }}{% endblock %}

{% block content %}
    <div class="span9">
    {{ knp_menu_render('CMSBundle:AdminMenu:structureOnFolderEdit', {'currentClass': 'active'}) }}

        <div class="well well-small">
            {{ form_start(form, {'attr':{'class':'form-horizontal'}}) }}
            {{ form_errors(form) }}
            <fieldset>
                <div class="tabbable">
                    <ul class="nav nav-pills">
                        <li class="active"><a href="#base-settings" data-toggle="tab">{{ 'Base settings'|trans }}</a></li>
                        <li><a href="#meta-tags" data-toggle="tab">{{ 'Meta tags'|trans }}</a></li>
                    </ul>
                    <div class="tab-content">
                        <div class="tab-pane" id="meta-tags">
                            {{ form_widget(form.meta) }}
                        </div>
                        <div class="tab-pane active" id="base-settings">
                            {{ form_widget(form) }}
                        </div>
                    </div>
                </div>
                <div class="control-group">
                    <div class="controls">
                        <button type="submit" name="update" class="btn btn-success"><i class="icon-ok icon-white"></i> {{ 'Save'|trans }}</button>
                        {% if allow_delete %}
                            {#<button type="submit" name="delete" class="btn btn-danger" onclick="return confirm('Вы уверены, что хотите удалить папку?')"><i class="icon-trash icon-white"></i> {{ 'Delete'|trans }}</button>#}
                        {% endif %}

                        {% if app.request.query.has('redirect_to') and folderPath %}
                            <a class="btn cmf-cancel" href="{{ folderPath }}">{{ 'Cancel'|trans }}</a>
                        {% else %}
                            <a class="btn cmf-cancel" href="{{ path('cms_admin_structure') }}">{{ 'Cancel'|trans }}</a>
                        {% endif %}

                    </div>
                </div>
            </fieldset>
            {{ form_end(form) }}
        </div>

    </div>
{% endblock content %}

{% block bottom_nav %}
    <div class="span3">
        {{ include('@CMS/AdminStructure/_tree.html.twig') }}
    </div>
{% endblock bottom_nav %}
