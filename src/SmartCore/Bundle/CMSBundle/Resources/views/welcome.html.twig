
{% extends '@Html/base.html.twig' %}

{% block title %}{{ cms_html_title({
    'site_full_name': 'Welcome to Smart Core CMS (based on Symfony2 Framework)',
})
}}{% endblock %}

{% set felib = felib_use('bootstrap', '2.3.2') %}

{% block styles %}
    {{ parent() }}
    <style type="text/css">
        @import url({{ asset('bundles/felib/bootstrap/2.3.2/css/bootstrap-responsive.min.css') }});
        body {
            margin-top: 40px;
            margin-bottom: 40px;
        }
    </style>
{% endblock %}

{% block body %}
    <div class="container">
        <div class="hero-unit">
            <h1>Welcome to Smart Core CMS!</h1>
            <p>This is a template for a simple marketing or informational website. It includes a large callout called the hero unit and three supporting pieces of content. Use it as a starting point to create something more unique.</p>
        </div>
    </div>
{% endblock body %}
