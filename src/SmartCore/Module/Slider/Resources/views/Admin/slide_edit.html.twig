{% extends '@CMS/Admin/module.html.twig' %}

{% block html_head_title %}{{ 'Slide'|trans }} / {{ parent() }}{% endblock html_head_title %}

{% block content %}

    <ul class="nav nav-pills" id="myTab">
        <li><a href="{{ path('smart_module.slider.admin') }}">Список всех слайдеров</a></li>
        <li><a href="{{ path('smart_module.slider.admin_slider', {'id': slide.slider.id }) }}">Редактирование слайдера <b>&laquo;{{ slide.slider.title }}&raquo;</b></a></li>
        <li class="active"><a>Свойства слайда</a></li>
    </ul>

    <table style="width: 100%;">
        <tr>
            <td style="vertical-align: top;">
                {{ form(form, {'attr': {'class': 'form-horizontal'}} ) }}
            </td>
            <td>
                <img src="{{ asset(webPath) }}{{ slide.filename }}" alt="" width="500" />
            </td>
        </tr>
    </table>

{% endblock content %}
