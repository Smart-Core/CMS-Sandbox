
{% for item in news.currentPageResults %}
    <h3><a href="{{ path('smart_module.news.item', {'slug': item.slug}) }}">{{ item.title }}</a></h3>
    <p><b>{{ item.createdAt|localizeddate('long') }}</b></p>
    <p>{{ item.annotation }}</p>
    <hr />
{% endfor %}

{% if news.haveToPaginate %}
    {{ pagerfanta(news, 'twitter_bootstrap_translated', {
            'routeName': 'smart_module.news.page',
            'routeParams': {'_folderPath': app.request.attributes.get('_route_params')['_folderPath']},
            'css_container_class': 'pagination pagination-centered',
        })
    }}
{% endif %}
