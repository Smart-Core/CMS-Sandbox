{% extends '@CatalogModule/Admin/repository.html.twig' %}

{% block title %}{{ 'Structure'|trans }} &laquo;{{ structure.title }}&raquo; / {{ parent() }}{% endblock %}

{% block content %}

    <h2>{{ 'Structure'|trans }} &laquo;{{ structure.title }}&raquo;</h2>

    <div class="span12">
        <a href="{{ path('smart_module.catalog_repository_admin', {'repository': structure.repository.name}) }}">
            &laquo; назад к репозиторию &laquo;{{ structure.repository.title }}&raquo;
        </a>
    </div>

    <div class="span3">
        {{ form(form, {'attr': {'class': 'well'} }) }}
    </div>

    <div class="span8">
        {% set menuItem = knp_menu_get('UnicatBundle:CategoryMenu:adminTree', [], {
            'categoryClass': structure.repository.categoryClass,
            'structure': structure
        }) %}
        {{ knp_menu_render(menuItem, {
            'currentClass': 'active',
            'clear_matcher': false,
        }) }}
    </div>

{% endblock content %}
