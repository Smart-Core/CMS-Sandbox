{% extends '@UnicatModule/Admin/configuration.html.twig' %}

{% block title %}{{ 'Structure'|trans }} &laquo;{{ structure.title }}&raquo; / {{ parent() }}{% endblock %}

{% block content %}

    <h3>{{ 'Structure'|trans }} &laquo;{{ structure.title }}&raquo;</h3>

    <div class="span3">
        {{ form(form, {'attr': {'class': 'well'} }) }}
    </div>

    <div class="span8">
        {% set menuItem = knp_menu_get('UnicatModule:CategoryMenu:adminTree', [], {
            'categoryClass': structure.configuration.categoryClass,
            'structure': structure
        }) %}
        {{ knp_menu_render(menuItem, {
            'currentClass': 'active',
            'clear_matcher': false,
        }) }}
    </div>

{% endblock content %}
