{% extends '@CMS/Admin/module.html.twig' %}

{% block title %} {{ 'Edit record'|trans }} &laquo;{{ form.vars.data.slug }}&raquo; / &laquo;{{ configuration.title }}&raquo; Unicat / {{ parent() }}{% endblock %}

{% block content %}

    <h2>{{ 'Edit record'|trans }} &laquo;{{ form.vars.data.slug }}&raquo;</h2>

    <p><a href="{{ path('unicat_admin.configuration', {'configuration': configuration.name}) }}">
        &laquo; назад к конфигурации &laquo;{{ configuration.title }}&raquo;
    </a></p>

    {{ form_start(form, {'attr':{'class':'form-horizontal well'}}) }}
    {{ form_errors(form) }}
    <fieldset>
        <div class="tabbable">
            <ul class="nav nav-pills">
                <li class="active"><a href="#base-settings" data-toggle="tab">{{ 'Base settings'|trans }}</a></li>
                <li><a href="#meta-tags" data-toggle="tab">{{ 'Meta tags'|trans }}</a></li>
            </ul>
            <div class="tab-content">
                <div class="tab-pane" id="meta-tags">
                    {{ form_widget(form.meta) }}
                </div>
                <div class="tab-pane active" id="base-settings">
                    {{ form_widget(form) }}
                </div>
            </div>
            <div class="control-group">
                <div class="controls">
                    {{ form_rest(form) }}
                </div>
            </div>
        </div>
    </fieldset>
    {{ form_end(form) }}

    {{ tinymce_init3() }}
    {{ elfinder_tinymce_init() }}

{% endblock content %}
