{% extends '@Html/base.html.twig' %}

{% block html_head_title %}{{ cms_html_title({
    'delimiter': '&ndash;',
    'site_full_name': 'Smart Core CMS (based on Symfony2 Framework)',
    'site_short_name': 'Smart Core CMS'
}) }}{% endblock html_head_title %}

{% block html_head_styles %}
    {{ parent() }}
    {{ felib_css('syntaxhighlighter') }}
{% endblock html_head_styles %}

{% block html_head_scripts %}
    {{ parent() }}
    {{ felib_js('syntaxhighlighter') }}
    <script type="text/javascript">
        SyntaxHighlighter.defaults['toolbar'] = false;
        SyntaxHighlighter.all();
    </script>
{% endblock html_head_scripts %}

{% block body %}
<div class="container">
<div class="row-fluid">
    <div class="span3">
        {{ main_menu }}
    </div>

    <div class="span9">
        <div id="breadcrumbs">
            {{ breadcrumbs }}
        </div>

        {% include '@CMS/flash_messages.thml.twig' %}

        <div id="content">
            {% block content content %}
        </div>
    </div>
</div>
<div class="row-fluid" id="footer">
    <div class="span9">
        {{ footer }}
    </div>
    <div class="span3" style="text-align: right">
        {{ footer_right }}
    </div>

    <div class="span11 text-center">
        <p><small>{{ simple_profiler() }}</small></p>
    </div>
</div>
</div>
{% endblock body %}
